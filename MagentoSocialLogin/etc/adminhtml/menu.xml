<?xml version="1.0"?>

<!-- This XML is used to add a menu item to our Magento Admin Backend Settings Page -->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Backend:etc/menu.xsd">
    <menu>

		<!-- Adding a Social Login Client menu item in admin backend for access to other sub settings -->
        <add id="MiniOrange_MagentoSocialLogin::SocialLogin"
        	 title="Social Login"
        	 module="MiniOrange_MagentoSocialLogin"
        	 sortOrder="52"
        	 resource="MiniOrange_MagentoSocialLogin::SocialLogin" />




		<!--
        	Adding a Social Login Provider sub menu item to show settings that IDP needs
        	Parent Menu Item is the miniOrange Social Login menu item mentioned above.
        	Action is the controllerAction to be called when menu item is clicked.
    		-->
		<add id="MiniOrange_MagentoSocialLogin::sociallogin_settings"
        	 title="Social Login Settings"
        	 module="MiniOrange_MagentoSocialLogin"
        	 sortOrder="0"
        	 parent="MiniOrange_MagentoSocialLogin::SocialLogin"
        	 action="mosocial/socialloginsettings"
        	 resource="MiniOrange_MagentoSocialLogin::sociallogin_settings"/>

		<add id="MiniOrange_MagentoSocialLogin::signin_settings"
        	 title="Sign in Settings"
        	 module="MiniOrange_MagentoSocialLogin"
        	 sortOrder="1"
        	 parent="MiniOrange_MagentoSocialLogin::SocialLogin"
        	 action="mosocial/signinsettings"
        	 resource="MiniOrange_MagentoSocialLogin::signin_settings"/>

		<add id="MiniOrange_MagentoSocialLogin::user_analytics"
        	 title="User Analytics"
        	 module="MiniOrange_MagentoSocialLogin"
        	 sortOrder="2"
        	 parent="MiniOrange_MagentoSocialLogin::SocialLogin"
        	 action="mosocial/useranalytics"
        	 resource="MiniOrange_MagentoSocialLogin::user_analytics"/>
		<!--
             Adding a Attribute / Role Mapping sub menu item to handle Role Mapping settings
             Parent Menu Item is the miniOrange Social Login menu item mentioned above.
             Action is the controllerAction to be called when menu item is clicked.
             -->
		<add id="MiniOrange_MagentoSocialLogin::attr_settings"
			 title="Attribute Mapping"
			 module="MiniOrange_MagentoSocialLogin"
			 sortOrder="3"
			 parent="MiniOrange_MagentoSocialLogin::SocialLogin"
			 action="mosocial/attrsettings"
			 resource="MiniOrange_MagentoSocialLogin::attr_settings"/>




		<!--
             Adding a Role Mapping sub menu item to handle Role Mapping settings
             Parent Menu Item is the miniOrange OAuth menu item mentioned above.
             Action is the controllerAction to be called when menu item is clicked.
             -->
		<add id="MiniOrange_MagentoSocialLogin::role_settings"
			 title="Role Mapping"
			 module="MiniOrange_MagentoSocialLogin"
			 sortOrder="4"
			 parent="MiniOrange_MagentoSocialLogin::SocialLogin"
			 action="mosocial/rolesettings"
			 resource="MiniOrange_MagentoSocialLogin::role_settings"/>

			 <!--
        	Adding a upgrade menu item to show users the different plans
			that we have and that user can upgrade to. Parent Menu Item is the 
			miniOrange OAuth menu item mentioned above. Action is the controllerAction 
			to be called when menu item is clicked.
    		-->
		<add id="MiniOrange_MagentoSocialLogin::upgrade" 
        	 title="Upgrade" 
        	 module="MiniOrange_MagentoSocialLogin" 
        	 sortOrder="5" 
        	 parent="MiniOrange_MagentoSocialLogin::SocialLogin" 
        	 action="mosocial/upgrade"
        	 resource="MiniOrange_MagentoSocialLogin::upgrade"/>

    </menu>
</config>
