<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="admin_user_authenticate_after">
        <observer name="miniorange_admin_login_success" instance="MiniOrange\AdminLogs\Observer\LoginSuccess"/>
    </event>
    <event name="backend_auth_user_login_failed">
        <observer name="miniorange_admin_login_failed" instance="MiniOrange\AdminLogs\Observer\LoginFailed"/>
    </event>
</config>
