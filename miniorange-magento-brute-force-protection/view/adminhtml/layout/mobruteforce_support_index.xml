<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="MiniOrange_BruteForceProtection::css/account.css"/>
        <css src="MiniOrange_BruteForceProtection::css/all.min.css"/>
    </head>
    <body>
        <!--
            Defining our block and phtml file for Support Form.
            Calls our Admin Block for some common functionality.
            -->
        <referenceContainer name="content">
            <!-- This adds the navbar to the phtml file for easy navigation -->
            <block class="MiniOrange\BruteForceProtection\Block\BruteForce"
                   name="miniorange.bruteforce.navbar"
                   template="navbar.phtml"/>

            <block class="MiniOrange\BruteForceProtection\Block\BruteForce"
                   name="miniorange.bruteforce.admin.support"
                   template="Account/support.phtml"/>
        </referenceContainer>
        <!--
            Defining our block and phtml file for adding common
            javascript file to all of our pages
            -->
        <referenceContainer name="before.body.end">
            <block class="MiniOrange\BruteForceProtection\Block\BruteForce"
                   template="js.phtml"
                   name="before_body_js"/>
        </referenceContainer>
    </body>
</page>

