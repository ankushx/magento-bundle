<script>
require(['jquery'], function($) {
    // Function to show Magento-style success messages
    function showMagentoSuccessMessage(message) {
        // Find or create messages container at the very top of the page content
        var messagesContainer = jQuery('.messages');
        if (messagesContainer.length === 0) {
            // Place message at the very top, before the navbar
            var navbar = jQuery('.topnav').first().parent();
            if (navbar.length === 0) {
                navbar = jQuery('div[style*="padding: 0 1%"]').first();
            }
            
            // Create messages container
            messagesContainer = jQuery('<div class="messages" style="margin-bottom: 20px;"></div>');
            
            if (navbar.length > 0) {
                navbar.before(messagesContainer);
            } else {
                var contentContainer = jQuery('.page-content').first();
                if (contentContainer.length === 0) {
                    contentContainer = jQuery('.admin__page-content').first();
                }
                if (contentContainer.length > 0) {
                    contentContainer.prepend(messagesContainer);
                } else {
                    jQuery('body').prepend(messagesContainer);
                }
            }
        }
        
        // Create success message
        var successMessage = jQuery('<div class="message message-success success"><div data-ui-id="message-success">' + 
            jQuery('<div>').text(message).html() + 
            '</div></div>');
        
        // Remove any existing success messages first
        messagesContainer.find('.message-success').remove();
        
        // Add the new success message
        messagesContainer.append(successMessage);
        
        // Scroll to top to show the message
        jQuery('html, body').animate({
            scrollTop: 0
        }, 300);
    }
    
    $(document).ready(function() {
        var currentPage = 1;
        var perPage = parseInt($('#entriesPerPage').val());
        var totalRows = $('.data-table-row').length;
        var totalPages = Math.ceil(totalRows / perPage);

        // Select All checkbox
        $('#selectAll').on('change', function() {
            $('.row-checkbox').prop('checked', this.checked);
        });

        // Individual checkbox change
        $(document).on('change', '.row-checkbox', function() {
            var allChecked = $('.row-checkbox:checked').length === $('.row-checkbox').length;
            $('#selectAll').prop('checked', allChecked);
        });

        // Search functionality
        $('#searchUsers').on('keyup', function() {
            var searchTerm = $(this).val().toLowerCase();
            $('.data-table-row').each(function() {
                var email = $(this).data('email').toLowerCase();
                if (email.indexOf(searchTerm) > -1) {
                    $(this).removeClass('hidden-row');
                } else {
                    $(this).addClass('hidden-row');
                }
            });
            updatePagination();
        });

        // Entries per page change
        $('#entriesPerPage').on('change', function() {
            perPage = parseInt($(this).val());
            totalPages = Math.ceil(totalRows / perPage);
            currentPage = 1;
            updatePagination();
        });

        // Store form data for unblock action
        var pendingUnblockData = null;
        
        // Function to perform the actual unblock
        function performUnblock(formData) {
            // Submit bulk unblock request using a single AJAX call
            $.ajax({
                url: '<?= $block->escapeUrl($block->getUrl('mobruteforce/blockedusers/index')) ?>',
                type: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                },
                data: {
                    'form_key': '<?= $block->escapeHtml($block->getFormKey()) ?>',
                    'option': 'manageUsers',
                    'bulk_unblock_users': formData,
                    'isAjax': '1'
                },
                dataType: 'json',
                success: function(response) {
                    if (response && response.success && response.message) {
                        // Show success message using Magento's messageManager
                        showMagentoSuccessMessage(response.message);
                        // Reload after a short delay to show the message
                        setTimeout(function() {
                            location.reload();
                        }, 1500);
                    } else {
                        // Reload if no message in response
                        location.reload();
                    }
                },
                error: function() {
                    // Reload even on error to show any error messages
                    location.reload();
                }
            });
        }
        
        // Bulk action
        $('#bulkAction').on('change', function() {
            var action = $(this).val();
            if (action === 'unblock') {
                var selectedRows = $('.row-checkbox:checked');
                if (selectedRows.length === 0) {
                    alert('Please select at least one account to unblock.');
                    $(this).val('');
                    return;
                }
                
                // Prepare form data
                var formData = [];
                selectedRows.each(function() {
                    formData.push({
                        customer_id: $(this).val(),
                        email: $(this).data('email'),
                        user_type: $(this).data('user-type')
                    });
                });
                
                // Store form data for later use
                pendingUnblockData = formData;
                
                // Update confirmation message based on number of selected users
                var selectedCount = selectedRows.length;
                var confirmationText = '';
                if (selectedCount === 1) {
                    confirmationText = 'Are you sure you want to unblock this user?';
                } else {
                    confirmationText = 'Are you sure you want to unblock these users?';
                }
                $('#unblockConfirmationText').text(confirmationText);
                
                // Show confirmation modal
                $('#unblockConfirmationModal').addClass('show-modal');
                
                // Reset dropdown
                $(this).val('');
            }
        });
        
        // Confirm button click handler
        $('#confirmUnblockBtn').on('click', function() {
            if (pendingUnblockData) {
                // Hide modal
                $('#unblockConfirmationModal').removeClass('show-modal');
                // Perform unblock
                performUnblock(pendingUnblockData);
                // Clear pending data
                pendingUnblockData = null;
            }
        });
        
        // Cancel button click handler
        $('#cancelUnblockBtn').on('click', function() {
            // Hide modal
            $('#unblockConfirmationModal').removeClass('show-modal');
            // Clear pending data
            pendingUnblockData = null;
        });
        
        // Close modal when clicking outside of it
        $(window).on('click', function(event) {
            if ($(event.target).is('#unblockConfirmationModal')) {
                $('#unblockConfirmationModal').removeClass('show-modal');
                pendingUnblockData = null;
            }
        });

        // Pagination
        function updatePagination() {
            var visibleRows = $('.data-table-row:not(.hidden-row)');
            var start = (currentPage - 1) * perPage;
            var end = start + perPage;
            
            visibleRows.each(function(index) {
                if (index >= start && index < end) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
            
            var visibleCount = visibleRows.length;
            var showingFrom = visibleCount > 0 ? start + 1 : 0;
            var showingTo = Math.min(end, visibleCount);
            
            $('#showingFrom').text(showingFrom);
            $('#showingTo').text(showingTo);
            $('#totalEntries').text(visibleCount);
            
            $('#prevPage').prop('disabled', currentPage === 1);
            $('#nextPage').prop('disabled', currentPage >= Math.ceil(visibleCount / perPage));
        }

        $('#prevPage').on('click', function() {
            if (currentPage > 1) {
                currentPage--;
                updatePagination();
            }
        });

        $('#nextPage').on('click', function() {
            var visibleRows = $('.data-table-row:not(.hidden-row)').length;
            if (currentPage < Math.ceil(visibleRows / perPage)) {
                currentPage++;
                updatePagination();
            }
        });

        // Initial pagination
        updatePagination();
    });
});
</script>
