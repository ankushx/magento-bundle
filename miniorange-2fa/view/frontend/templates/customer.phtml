<?php

use MiniOrange\TwoFA\Block\TwoFA;

$formKey = $block->getBlockHtml('formkey');
$request = $block->getRequestVariable();
$email =  $block->getSessionUsername();
$active2FAs = $block->getStoreConfig();
$activeMethods = $active2FAs != NULL ? json_decode($active2FAs, true) : [];
$tfaArray = $block->getAllTfaMethods();
$issuer = $block->AuthenticatorIssuer();
$QrcodeJS = $block->getQrCodeJS();
$formPostUrl = $block->getBaseUrl(). "motwofa/mocustomer";
$loginPageUrl = $block->getBaseUrl(). "customer/account/login/";
$error=isset($request['error']);
$deleterow=isset($request['sendback'])? 1 : 0;
$deleteset=isset($request['deleteSet'])? 1: 0;
$active_method_number=$block->get_number_of_activemethod_customer();

if( isset( $request['mooption'] ) ){
    if( "invokeTFA" === $request['mooption'] ) {
        InvokeUserTFA( $block, $formKey, $formPostUrl,$loginPageUrl,$error,$request );
    } else if ( "invokeInline" === $request['mooption'] && isset( $request['step'] ) ) {

        switch( $request['step'] ) {

            case "ChooseMFAMethod":
                ChooseMFAMethod( $block, $formKey, $activeMethods, $tfaArray, $formPostUrl, $loginPageUrl, null, 0 );
                break;
            case "OOSMethodValidation":
                OOSMethodValidation( $block, $formKey, $formPostUrl,$error,$deleteset,$request,$active_method_number,$loginPageUrl );
                break;
            case "GAMethodValidation":
                $AuthUrl = $block->AuthenticatorCustomerUrl();
                $twofautility = \Magento\Framework\App\ObjectManager::getInstance()->get(\MiniOrange\TwoFA\Helper\TwoFAUtility::class);
                $email = $twofautility->getSessionValue('mousername');
                
                // First, try to get secret from database (for returning users)
                $secret = false;
                if($email){
                    $row = $twofautility->getMoTfaUserDetails('miniorange_tfa_users', $email);
                    if( is_array( $row ) && sizeof( $row ) > 0 ) {
                        $db_secret = isset( $row[0]['secret'] ) ? $row[0]['secret'] : false;
                        if($db_secret !== false && !empty(trim($db_secret))){
                            $secret = $db_secret;
                        }
                    }
                }
                
                // If no database secret, check session (for first-time registration)
                if (!$secret) {
                    $secret = $twofautility->getSessionValue('customer_inline_secret');
                }
                
                // If still no secret, try to extract from URL if available
                if (!$secret && $AuthUrl && strpos($AuthUrl, 'secret=') !== false) {
                    $parts = parse_url($AuthUrl);
                    if (isset($parts['query'])) {
                        parse_str($parts['query'], $params);
                        $secret = isset($params['secret']) ? $params['secret'] : '';
                    }
                }
                
                GAMethodValidation( $block, $formKey, $formPostUrl, $AuthUrl, $issuer, $QrcodeJS, $error, $active_method_number, $loginPageUrl, null, $secret, 0, false, false, $request, 6 );
                break;
            case "OOEMethodValidation":
                OOEMethodValidation( $block, $formKey, $formPostUrl,$error,$deleteset,$request,$active_method_number,$loginPageUrl );
                break;
            case "OOSEMethodValidation":
                OOSEMethodValidation( $block, $formKey, $formPostUrl, $error, $request, $active_method_number, $loginPageUrl, null, 0, false, false, 6, '' );
                break;
            default:
                InvalidRequest();
        }
    } else {
        InvalidRequest();
    }

} else {
    InvalidRequest();
}

