function GAMethodValidation($block, $formKey, $formPostUrl, $AuthUrl, $issuer, $QrcodeJS, $error, $active_method_number, $loginPageUrl, $popup_ui_values, $secret, $customer_skip_twofa, $is_device_based_enabled, $is_device_limit_exceeded, $request, $otp_length)
{
    // Check if the user is on the "add passcode" step
    $isAddPasscodeStep = isset($request['addPasscode']) && $request['addPasscode'] == 'true';
    
    // Check if this is a returning user (user exists in database)
    // This distinguishes between:
    // - Setup flow (first time): user doesn't exist in DB -> show QR code, back goes to method selection
    // - Login flow (second time): user exists in DB -> don't show QR code, back goes to login page
    $twofautility = \Magento\Framework\App\ObjectManager::getInstance()->get(\MiniOrange\TwoFA\Helper\TwoFAUtility::class);
    $email = $twofautility->getSessionValue('mousername');
    $isReturningUser = false;
    
    // If we're on the passcode step (addPasscode=true), check if user exists in DB
    // If user exists in DB, this is a login flow (second time), not setup flow
    if($isAddPasscodeStep && $email){
        $row = $twofautility->getMoTfaUserDetails('miniorange_tfa_users', $email);
        if(is_array($row) && sizeof($row) > 0){
            $activeMethod = isset($row[0]['active_method']) ? $row[0]['active_method'] : '';
            // If active_method is GoogleAuthenticator, this is definitely a login flow
            if($activeMethod === 'GoogleAuthenticator'){
                $isReturningUser = true;
            }
        }
