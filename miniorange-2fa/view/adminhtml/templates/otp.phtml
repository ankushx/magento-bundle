$auth_index_url = $block->getUrl('motwofa/otp/authindex', ['form_key' => $block->getFormKey()]);
$admin_skip_twofa = $block->do_admin_skip_twofa('');
$formKey = $block->getFormKey();

if (isset($params['steps'])) {
    switch ($params['steps']) {
        case "InvokeAdminTfa":
            InvokeAdminTFA($this, $params, $baseurl, $numberOF_admin_methods, 
                $auth_post_url, $auth_index_url, $formKey, $admin_skip_twofa);
            break;
        case "choosemethod":
            $tfaArray = $block->getAllTfaMethods();
            ChooseAdminMethod($block, $baseurl, $params, $activeMethods, $tfaArray, 
                $auth_post_url, $auth_index_url, $formKey, $admin_skip_twofa);
            break;
        case "OOS":
            OOSMethod($block, $baseurl, $params, $numberOF_admin_methods, 
                $auth_post_url, $auth_index_url, $formKey, $admin_skip_twofa);
            break;
        case "OOE":
            OOEMethod($block, $baseurl, $params, $admin_email, $numberOF_admin_methods, 
                $auth_post_url, $auth_index_url, $formKey, $admin_skip_twofa);
            break;
        case "OOSE":
            OOSEMethod($block, $baseurl, $params, $admin_email, $numberOF_admin_methods, 
                $auth_post_url, $auth_index_url, $formKey, $admin_skip_twofa);
            break;
        case "OOW":
            OOWMethod($block, $baseurl, $params, $numberOF_admin_methods, 
                $auth_post_url, $auth_index_url, $formKey, $admin_skip_twofa);
            break;
        case "GoogleAuthenticator":
            $QrcodeJS = $block->getQrCodeJS();
            $issuer = $block->AuthenticatorIssuer();
            $Gauth_URL = $block->AuthenticatorUrl();
            $secret = $block->getAdminSecret();
            GoogleAuthenticatorMethod($block, $baseurl, $params, $QrcodeJS, $issuer, 
                $numberOF_admin_methods, $auth_post_url, $auth_index_url, 
                $formKey, $Gauth_URL, $secret, $admin_skip_twofa);
            break;
        case "UserLimit":
            User_limit_reached($block, $baseurl, $params);
            break;
        case "Backdoor":
            Backdoor_error($block, $baseurl, $params);
            break;
        default:
            // Get the base URL (homepage) and append the admin login path
            $redirectUrl = $block->getBaseUrl() . "admin/";
            // Use JavaScript to redirect to the admin login page
            $redirectUrlEscaped = $block->escapeJs($redirectUrl);
            ?>
            <script type="text/javascript">
                window.location.href = '<?= /* @noEscape */ $redirectUrlEscaped ?>';
