    : $block->get_admin_active_method($admin_email);
if (!$active2FAs || $active2FAs == '') {
    $active2FAs = '["OOE"]';
}

    $activeMethods = !is_array($active2FAs) ? json_decode($active2FAs, true): $active2FAs;


