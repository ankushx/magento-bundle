require(['jquery', 'mage/validation'], function($) {
    $('form').on('submit', function(e) {
        var $form = $(this);
        
        // Check if form validation is enabled
        if ($form.data('mageValidation')) {
            // Validate the form
            if (!$form.valid()) {
                // Form is invalid, don't show loader
                return true;
            }
        }
        
        // Check for specific fields that should be validated manually
        var authCodeField = $('#auth-code');
        if (authCodeField.length && !authCodeField.val().trim()) {
            return true;
        }

        var googlePasscode = $('#Google_Auth_method_passcode');
        if (googlePasscode.length && !googlePasscode.val().trim()) {
            return true;
        }
        
        // Check for phone number field in SMS forms (OOS, OOW, OOSE)
        var phoneField = $('#oos_method_input_phone, #oose_method_input_phone');
        if (phoneField.length) {
            var phoneValue = phoneField.val();
            if (!phoneValue || !phoneValue.trim()) {
                // Phone number is empty, don't show loader
                return true;
            }
        }

        // Only show loader if form is valid
        $('body').loader().loader('show');
    });
});
