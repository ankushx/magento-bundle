$admin_email = $this->getAdminEmailDetails();

if (!($admin_email)) {
    $block->emailerror();
    $redirectUrl = $block->getAdminPageUrl();
    $redirectUrlEscaped = $block->escapeJs($redirectUrl);
    ?>
    <script type="text/javascript">
        window.location.href = '<?= /* @noEscape */ $redirectUrlEscaped ?>';
